---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Sidebar from '../components/Sidebar.astro';
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';

interface Props {
  title: string;
  showSidebar?: boolean;
  fullHeight?: boolean;
}

const { title, showSidebar = false, fullHeight = false } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Africtivistes Digital Self-Audit</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <ViewTransitions />
  </head>
  <body class="min-h-screen bg-gray-50 flex flex-col">
    <Header />
    
    <div class={`flex flex-1 ${fullHeight ? 'h-[calc(100vh-8rem)]' : ''}`}>
      {showSidebar && <Sidebar />}
      <main class={`flex-1 ${fullHeight ? 'overflow-auto' : 'p-4 md:p-6'} ${showSidebar ? 'ml-0 md:ml-64' : ''}`}>
        <slot />
      </main>
    </div>
    
    <Footer />
  </body>
</html>

